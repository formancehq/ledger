{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>formancehq/shared-config//renovate/presets/golang"
  ],
  "ignoreDeps": [
    "github.com/formancehq/ledger/pkg/client"
  ],
  "baseBranchPatterns": [
    "main",
    "/^release\\/.*/",
    "!/^release\\/v1.*/",
    "!/^release\\/v2\\.0/",
    "!/^release\\/v2\\.1/"
  ],
  "postUpgradeTasks": {
    "commands": [
      "just tidy"
    ],
    "executionMode": "branch",
    "fileFilters": [
      "**/*"
    ]
  }
}

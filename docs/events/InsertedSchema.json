{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/formancehq/ledger/pkg/events/inserted-schema",
  "$ref": "#/$defs/InsertedSchema",
  "$defs": {
    "ChartAccount": {
      "properties": {
        "Metadata": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartAccountMetadata"
          },
          "type": "object"
        },
        "Rules": {
          "$ref": "#/$defs/ChartAccountRules"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Metadata",
        "Rules"
      ]
    },
    "ChartAccountMetadata": {
      "properties": {
        "default": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ChartAccountRules": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "ChartOfAccounts": {
      "additionalProperties": {
        "$ref": "#/$defs/ChartSegment"
      },
      "type": "object"
    },
    "ChartSegment": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/ChartVariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartSegment"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/ChartAccount"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account"
      ]
    },
    "ChartVariableSegment": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/ChartVariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartSegment"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/ChartAccount"
        },
        "Pattern": {
          "type": "string"
        },
        "Label": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account",
        "Pattern",
        "Label"
      ]
    },
    "InsertedSchema": {
      "properties": {
        "ledger": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/$defs/Schema"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ledger",
        "schema"
      ]
    },
    "QueryTemplate": {
      "properties": {
        "name": {
          "type": "string"
        },
        "resource": {
          "type": "string"
        },
        "params": true,
        "vars": {
          "additionalProperties": {
            "$ref": "#/$defs/VarSpec"
          },
          "type": "object"
        },
        "body": true
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "resource",
        "params",
        "vars",
        "body"
      ]
    },
    "QueryTemplates": {
      "additionalProperties": {
        "$ref": "#/$defs/QueryTemplate"
      },
      "type": "object"
    },
    "Schema": {
      "properties": {
        "chart": {
          "$ref": "#/$defs/ChartOfAccounts"
        },
        "transactions": {
          "$ref": "#/$defs/TransactionTemplates"
        },
        "queries": {
          "$ref": "#/$defs/QueryTemplates"
        },
        "version": {
          "type": "string"
        },
        "createdAt": {
          "$ref": "#/$defs/Time"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "chart",
        "transactions",
        "queries",
        "version",
        "createdAt"
      ]
    },
    "Time": {
      "type": "string",
      "format": "date-time",
      "title": "Normalized date"
    },
    "TransactionTemplate": {
      "properties": {
        "description": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "runtime": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "description",
        "script"
      ]
    },
    "TransactionTemplates": {
      "additionalProperties": {
        "$ref": "#/$defs/TransactionTemplate"
      },
      "type": "object"
    },
    "VarSpec": {
      "properties": {
        "type": {
          "type": "string"
        },
        "default": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "default"
      ]
    }
  }
}
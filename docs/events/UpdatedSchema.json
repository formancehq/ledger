{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/formancehq/ledger/pkg/events/updated-schema",
  "$ref": "#/$defs/UpdatedSchema",
  "$defs": {
    "ChartAccount": {
      "properties": {
        "Metadata": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartAccountMetadata"
          },
          "type": "object"
        },
        "Rules": {
          "$ref": "#/$defs/ChartAccountRules"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Metadata",
        "Rules"
      ]
    },
    "ChartAccountMetadata": {
      "properties": {
        "default": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ChartAccountRules": {
      "properties": {},
      "additionalProperties": false,
      "type": "object"
    },
    "ChartOfAccounts": {
      "additionalProperties": {
        "$ref": "#/$defs/ChartSegment"
      },
      "type": "object"
    },
    "ChartSegment": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/ChartVariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartSegment"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/ChartAccount"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account"
      ]
    },
    "ChartVariableSegment": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/ChartVariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/ChartSegment"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/ChartAccount"
        },
        "Pattern": {
          "type": "string"
        },
        "Label": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account",
        "Pattern",
        "Label"
      ]
    },
    "Schema": {
      "properties": {
        "chart": {
          "$ref": "#/$defs/ChartOfAccounts"
        },
        "version": {
          "type": "string"
        },
        "createdAt": {
          "$ref": "#/$defs/Time"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "chart",
        "version",
        "createdAt"
      ]
    },
    "Time": {
      "type": "string",
      "format": "date-time",
      "title": "Normalized date"
    },
    "UpdatedSchema": {
      "properties": {
        "ledger": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/$defs/Schema"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ledger",
        "schema"
      ]
    }
  }
}
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/formancehq/ledger/pkg/events/updated-schema",
  "$ref": "#/$defs/UpdatedSchema",
  "$defs": {
    "AccountRules": {
      "properties": {
        "allowedSources": {
          "type": "object"
        },
        "allowedDestinations": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "AccountSchema": {
      "properties": {
        "Metadata": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "Rules": {
          "$ref": "#/$defs/AccountRules"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "Metadata",
        "Rules"
      ]
    },
    "ChartOfAccounts": {
      "additionalProperties": {
        "$ref": "#/$defs/SegmentSchema"
      },
      "type": "object"
    },
    "Schema": {
      "properties": {
        "chart": {
          "$ref": "#/$defs/ChartOfAccounts"
        },
        "version": {
          "type": "string"
        },
        "createdAt": {
          "$ref": "#/$defs/Time"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "chart",
        "version",
        "createdAt"
      ]
    },
    "SegmentSchema": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/VariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/SegmentSchema"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/AccountSchema"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account"
      ]
    },
    "Time": {
      "type": "string",
      "format": "date-time",
      "title": "Normalized date"
    },
    "UpdatedSchema": {
      "properties": {
        "ledger": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/$defs/Schema"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ledger",
        "schema"
      ]
    },
    "VariableSegment": {
      "properties": {
        "VariableSegment": {
          "$ref": "#/$defs/VariableSegment"
        },
        "FixedSegments": {
          "additionalProperties": {
            "$ref": "#/$defs/SegmentSchema"
          },
          "type": "object"
        },
        "Account": {
          "$ref": "#/$defs/AccountSchema"
        },
        "Pattern": {
          "type": "string"
        },
        "Label": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "VariableSegment",
        "FixedSegments",
        "Account",
        "Pattern",
        "Label"
      ]
    }
  }
}
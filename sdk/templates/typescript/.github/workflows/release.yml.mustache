name: tags
on:
    push:
        tags:
            - '*'

jobs:
    Publish:
        name: 'Publish'
        runs-on: ubuntu-latest
        steps:
            - uses: actions/checkout@v3
            - uses: actions/setup-node@v3
              with:
                node-version: '16.x'
                registry-url: 'https://registry.npmjs.org'
            - run: npm ci
            - run: npm publish
              env:
                NODE_AUTH_TOKEN: {{ NPM_TOKEN }}

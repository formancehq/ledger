name: tags
on:
    push:
        tags:
            - '*'

jobs:
    Publish:
        name: 'Publish'
        runs-on: ubuntu-latest
        steps:
            - uses: actions/checkout@v3
            - name: Install Task
              uses: arduino/setup-task@v1
            - run: task build
            - name: Publish a Python distribution to PyPI
              uses: pypa/gh-action-pypi-publish@release/v1
              with:
                  user: __token__
                  password: ${{ secrets.PYPI_SECRET }}